<%- include ('partials/head') -%>
<div class="container">
    <div class="row">
        <div class="col-10 offset-1">
            <h3>Add Account</h3>
            <div class="row">
                <div class="col-10 offset-1">
                    <form action="/save" method="POST">
                        <input
                            type="text"
                            name="first_name"
                            class="form-control"
                            placeholder="first name"
                            required
                        /><br />
                        <input
                            type="text"
                            name="last_name"
                            class="form-control"
                            placeholder="last name"
                            required
                        /><br />
                        <input
                            type="email"
                            name="email"
                            class="form-control"
                            placeholder="email"
                            required
                        /><br />
                        <input
                            type="tel"
                            name="phone"
                            class="form-control"
                            placeholder="123-45-678"
                        /><br />
                        <button class="btn btn-primary form-control">
                            Save
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include ('partials/footer') -%>
