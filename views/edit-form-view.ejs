<%- include ('partials/head') -%>
<div class="container">
    <div class="row">
        <div class="col-10 offset-1">
            <h3>Edit Account</h3>
            <div class="row">
                <div class="col-10 offset-1">
                    <form action="/edit_acc_db" method="POST">
                        <input type="hidden" name="id" value="<%= data._id %>" />
                        <input
                            type="text"
                            name="first_name"
                            class="form-control"
                            value="<%= data.first_name %>"
                            required
                        /><br />
                        <input
                            type="text"
                            name="last_name"
                            class="form-control"
                            value="<%= data.last_name %>"
                            required
                        /><br />
                        <input
                            type="email"
                            name="email"
                            class="form-control"
                            value="<%= data.email %>"
                            required
                        /><br />
                        <input
                            type="tel"
                            name="phone"
                            class="form-control"
                            value="<%= data.phone %>"
                        /><br />
                        <button class="btn btn-warning form-control">
                            Edit
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include ('partials/footer') -%>
